{
  "name": "voicevox-voice-chat",
  "version": "1.0.0",
  "description": "VOICEVOX音声合成をゲームVCに送信するデスクトップアプリ",
  "main": "electron/main.cjs",
  "author": "VOICEVOX VC Team",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:web": "concurrently \"npm run server\" \"vite\"",
    "server": "node server/index.js",
    "build": "vite build",
    "build:win": "vite build && electron-builder --win",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.voicevox.voicechat",
    "productName": "VOICEVOX VC読み上げ",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "dist/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "THIRD_PARTY_LICENSES.md",
        "to": "THIRD_PARTY_LICENSES.md"
      },
      {
        "from": "build/vbcable",
        "to": "vbcable",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/tools/7z",
        "to": "tools/7z",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh"
    }
  }
}
